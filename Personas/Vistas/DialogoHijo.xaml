<Window x:Class="Personas.Vistas.DialogoHijo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personas.Vistas"
        mc:Ignorable="d"
        Title="DialogoHijo" Height="120" Width="200" ShowInTaskbar="False" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="Nacionalidad"></TextBlock>
        <TextBox Text="{Binding Mensaje}" Width="60" HorizontalAlignment="Left" Margin="5"></TextBox>
        <StackPanel Orientation="Horizontal">
            <Button IsDefault="True" Click="Button_Click" Content="Aceptar" Margin="5"></Button>
            <Button IsCancel="True" Content="Cancelar" Margin="5"></Button>
        </StackPanel>
    </StackPanel>
</Window>
