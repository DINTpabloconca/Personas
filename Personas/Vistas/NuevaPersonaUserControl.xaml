<UserControl x:Class="Personas.Vistas.NuevaPersonaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personas.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Nombre"></TextBlock>
        <TextBox></TextBox>
        <TextBlock Text="Edad"></TextBlock>
        <TextBox></TextBox>
        <TextBlock Text="Nacionalidad"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <ComboBox Margin="5" Width="100" ItemsSource="{Binding Nacionalidades}"></ComboBox>
            <Button Margin="5" Width="20" Command="{Binding Path=DialogCommand}" Content="+"></Button>
        </StackPanel>
        <Button Width="100" HorizontalAlignment="Center" Content="Aceptar"></Button>
    </StackPanel>
</UserControl>
